pipeline {
    agent any

    stages {

        stage('Clone') {
            steps {
                echo "Code is already cloned by Jenkins"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker stop devops-app || true
                docker rm devops-app || true
                docker build -t devops-project1:ci .
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker run -d -p 8081:80 --name devops-app devops-project1:ci
                '''
            }
        }
    }
}
